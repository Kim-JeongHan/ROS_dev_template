// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
    "dockerComposeFile": "../docker-compose.yaml",
    "service": "dev",
    "workspaceFolder" : "/overlay_ws",
	// Set *default* container specific settings.json values on container create.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools", 						// C/C++ extension
				"twxs.cmake", 								// CMake extension
				"ms-vscode.cmake-tools", 					// CMake Tools extension
				"ms-python.python",							// Python extension
				"smilerobotics.urdf",						// URDF extension
				"deitry.colcon-helper",						// Colcon Helper extension
				"DotJoshJohnson.xml",						// XML extension
				"redhat.vscode-yaml",						// YAML extension
				"yzhang.markdown-all-in-one",				// Markdown All in One extension
				"ybaumes.highlight-trailing-white-spaces",	// Highlight Trailing White Spaces extension
				"msfukui.eof-mark",							// EOF Mark extension
				"aaron-bond.better-comments",				// Better Comments extension
				"ms-iot.vscode-ros",						// ROS extension
				"althack.ament-task-provider",
				"betwo.b2-catkin-tools",
				"ms-azuretools.vscode-docker",
				"ms-vscode.cpptools",
				"redhat.vscode-yaml",
				"smilerobotics.urdf",
				"streetsidesoftware.code-spell-checker",
				"twxs.cmake",
				"yzhang.markdown-all-in-one",
				"zachflower.uncrustify"
			]
		}
	}
}
